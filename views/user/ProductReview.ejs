<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Review</title>
    <!-- Bootstrap css cdn link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- end of Bootstrap css cdn link -->
    <!-- Style css -->
    <link rel="stylesheet" href="/css/ProductReview.css" />
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">
    <!-- end of Style css -->
  </head>
  <body>
    <!-- header -->
  <%- include('header') %>
    <!-- end of header -->

    <!-- main -->
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="reviewHead">
              <div class="d-flex justify-content-between align-items-center">
                <h2>Ratings & Reviews</h2>
                <div class="d-flex align-items-center gap-2">
                  <div class="text-end">
                    <p class="proHead">Fort S48</p>
                    <div class="topRating d-flex align-items-center">
                      <span class="ratedTop">‚òÖ</span>
                      <span class="ratedTop">‚òÖ</span>
                      <span class="ratedTop">‚òÖ</span>
                      <span class="ratedTop">‚òÖ</span>
                      <span>‚òÖ</span>
                    </div>
                  </div>
                  <div class="img">
                    <% if (data && data.productImage && data.productImage.length > 0) { %>
                      <img src="/images/products/<%= data.productImage[0] %>" alt="">
                    <% } else { %>
                      <!-- Handle case when image is not available -->
                    <% } %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="contentBody">
              <div class="subHead">
                <form action="/review/<%=data._id%>" method="post">
                <h2>Rate this product</h2>
                <div class="rating d-flex align-items-center">
                  <span class="star">‚òÖ</span>
                  <span class="star">‚òÖ</span>
                  <span class="star">‚òÖ</span>
                  <span class="star">‚òÖ</span>
                  <span class="star">‚òÖ</span>
                  <input type="number" name="rating" hidden id="starInput">
                </div>
              </div>
              <div class="subHead">
                <h2 class="threeHead">Review this product</h2>
                <textarea class="large-input" name="description" rows="5" placeholder="Type your description here...">Premium sound quality üëå, Connectivity üëç, You can enjoy every beat in a song with Perfect equalization.</textarea>
                <textarea class="large-input small" name="title" rows="5" placeholder="Type your title here...">Perfect product!</textarea>
                <button type="submit" class="submitBtn">SUBMIT</button>
              </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- end of main -->

    <!-- footer -->
    <%- include('footers') %>
    <!-- end of footer -->

    <!-- custom js -->
    <script>
      const stars = document.querySelectorAll('.star');
      const input = document.querySelector('#starInput');

      stars.forEach((element, index) => {
        element.addEventListener('click', () => {
          stars.forEach((each, i) => {
            input.value = i + 1;
            if(index >= i){
              each.classList.remove('ratedstar');
              each.classList.add('ratedstar');
            }else{
              each.classList.remove('ratedstar');
            }
          });
        });
      });
    </script>
    <script src="./js/ProductReview.js"></script>
    <!-- end of custom js -->
    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/23d1247997.js"
      crossorigin="anonymous"
    ></script>
    <!-- end of fontawesome -->
    <!-- Bootstrap script file -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <!--end of Bootstrap script file -->
  </body>
</html>
