<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCTS</title>
    <link rel="stylesheet" href="/css/adminCss/products.css">
    <link rel="stylesheet" href="/css/adminCss/main.css">
</head>
<body>
    <div class="continer">
        <div class="layer1">
            <div class="logo">
                <img src="" alt="" class="logoimg">
            </div>
            <div class="searchBar">
                <!-- <input type="text" placeholder="  search product" class="searchBar1"> -->
            </div>
            <div class="logout">
                <button class="btn1">LOGOUT</button>
            </div>
        </div>
        <div class="layer2">
            <div class="tabs">
                <ul>
                    <li onclick="window.location.href='/dashboard'">DASHBOARD</li>
                    <li onclick="window.location.href='/users'">USERS</li>
                    <li onclick="window.location.href='/products'" style="background-color: red;">PRODUCTS</li>
                    <li onclick="window.location.href='/category'">CATEGORY</li>
                    <li onclick="window.location.href='/coupon'">COUPONS</li>
                    <li onclick="window.location.href='/orders'">ORDERS</li>
                    <li onclick="window.location.href='/banner'">BANNERS</li>
                </ul>
            </div>
            <div class="content_part">

                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Products</p>
                    <button class="add_product_btn_admin" onclick="window.location.href='/add-product'">Add Product</button>
                </div>
                
                <div class="product_list">
                    <div class="product_table">

                        <table>
                            <thead>
                                <tr>
                                    <th>Product Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Discount Percentage</th>
                                    <th>Quantity</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% for(let i = 0; i < products.length; i++) { %>
                                <tr>
                                    <td>
                                        <div class="img_product">
                                            <img src="/asset/<%= products[i].productImage%>" alt="" width="100%" height="100%">
                                        </div>
                                    </td>
                                    <td><%= products[i].productName %></td>
                                    <td><%= products[i].price %></td>
                                    <td><%= products[i].discount %></td>
                                    <td><%= products[i].quantity%></td>
                                    <td>
                                        <button type="submit" onclick="window.location.href='/product/edit/<%= products[i]._id%>'" class="edit-delete">EDIT</button>
                                    </td>
                                    <td>
                                        <button type="submit" onclick="window.location.href='/product/delete/<%= products[i]._id%>'" class="edit-delete">DELETE</button>
                                    </td>
                                </tr>
                                <% } %>  
                            </tbody>
                        </table>
                    </div>
                </div>

                         
            </div>
        </div>
    </div>
</body>
</html>