<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCTS</title>
    <link rel="stylesheet" href="/css/adminCss/products.css">
    <link rel="stylesheet" href="/css/adminCss/main.css">
</head>
<body>
    <div class="continer">
        <div class="layer1">
            <div class="logo">
                <img src="/images/others/Designer.png" alt="" width="50%" height="80%" >
            </div>
            <div class="searchBar">
                <!-- <input type="text" placeholder="  search product" class="searchBar1"> -->
            </div>
            <div class="logout">
                <button class="btn1">LOGOUT</button>
            </div>
        </div>
        <div class="layer2">
            <div class="tabs">
                <ul>
                    <li onclick="window.location.href='/dashboard'">DASHBOARD</li>
                    <li onclick="window.location.href='/users'">USERS</li>
                    <li onclick="window.location.href='/products'" style="background-color: red;">PRODUCTS</li>
                    <li onclick="window.location.href='/category'">CATEGORY</li>
                    <li onclick="window.location.href='/coupon'">COUPONS</li>
                    <li onclick="window.location.href='/orders'">ORDERS</li>
                    <li onclick="window.location.href='/banner'">BANNERS</li>
                </ul>
            </div>
            <div class="content_part">

                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Products</p>
                    <button class="add_product_btn_admin" onclick="window.location.href='/add-product'">Add Product</button>
                </div>
                
                <div class="product_list">
                    <div class="product_table">

                        <table>
                            <thead>
                                <tr>
                                    <th>Product Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Discount Percentage</th>
                                    <th>Quantity</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% for(let i = 0; i < products.length; i++) { %>
                                <tr class="row_<%=products[i]._id%>">
                                    <td>
                                        <div class="img_product">
                                            <img src="/asset/<%= products[i].productImage%>" alt="" width="100%" height="100%">
                                        </div>
                                    </td>
                                    <td><%= products[i].productName%></td>
                                    <td><%= products[i].price %></td>
                                    <td><%= products[i].discount %></td>
                                    <td><%= products[i].quantity%></td>
                                    <td>
                                        <button type="submit" onclick="window.location.href='/product/edit/<%= products[i]._id%>'" class="edit-delete">EDIT</button>
                                    </td>
                                    <td>
                                        <button type="submit" onclick="deleteProduct(event,'<%=products[i]._id%>')" class="edit-delete">DELETE</button>
                                    </td>
                                </tr>
                                <% } %>  
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
<script>
    async function deleteProduct (event,id) {
        event.preventDefault();
        const response=await axios.delete('/product/delete/'+ id);
        console.log(response);
        try {
            const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: "btn btn-success",
                cancelButton: "btn btn-danger"
            },
            buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel!",
            reverseButtons: true
            }).then(async (result) => {
            if (result.isConfirmed) {
                if(response.status ==200){
                document.querySelector('.row_'+id).remove()
            }else{
                console.log("deletion failed at product")
            }
            swalWithBootstrapButtons.fire({
                title: "Deleted!",
                text: "Your file has been deleted.",
                icon: "success"
            });
        } else if (
            result.dismiss === Swal.DismissReason.cancel
            ) {
                swalWithBootstrapButtons.fire({
                    title: "Cancelled",
                    text: "Your imaginary file is safe :)",
                    icon: "error"
                });
            }
        });
    } catch (error) {
        console.log("Error: " + error);
    }
    }
</script>
</html>