<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>COUPONS</title>
    <link rel="stylesheet" href="/css/adminCss/products.css">
    <link rel="stylesheet" href="/css/adminCss/main.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="continer">
        <div class="layer1">
            <div class="logo">
                <h2 class="rt">Rt-Store</h2>
            </div>
            <div class="searchBar">
                <!-- <input type="text" placeholder="  search product" class="searchBar1"> -->
            </div>
            <div class="logout">
                <button class="btn1">LOGOUT</button>
            </div>
        </div>
        <div class="layer2">
            <div class="tabs">
                <ul>
                    <li onclick="window.location.href='/dashboard'">DASHBOARD</li>
                    <li onclick="window.location.href='/users'">USERS</li>
                    <li onclick="window.location.href='/products'">PRODUCTS</li>
                    <li onclick="window.location.href='/category'">CATEGORY</li>
                    <li onclick="window.location.href='/coupon'" style="background-color:#F4F8FF;">COUPONS</li>
                    <li onclick="window.location.href='/orders'">ORDERS</li>
                    <li onclick="window.location.href='/banner'">BANNERS</li>
                </ul>
            </div>
            <div class="content_part">

                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Coupons</p>
                    <button class="add_product_btn_admin" onclick="window.location.href='/add-coupon'">Add Coupon</button>
                </div>

                <div class="product_list">
                    <div class="product_table">
                        <table>

                            <thead>
                                <tr>
                                    <th>Coupon ID</th>
                                    <th>Coupon Name</th>
                                    <th>Coupon Discount</th>
                                    <th>Minimum Amount</th>
                                    <th>Starting Date</th>
                                    <th>Ending Date</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let =i = 0; i < data.length; i++){%>
                                <tr class="row<% data[i]._id %>">
                                    <td><%= data[i]._id %></td>
                                    <td><%= data[i].couponDiscount %></td>
                                    <td><%= data[i].minOrderAmount %>%</td>
                                    <td><%= data[i].maxOrderAmount %></td>
                                    <td><%= data[i].startingDate.toDateString() %></td>
                                    <td><%= data[i].endingDate.toDateString() %></td>
                                    <td>
                                        <button type="submit" onclick="deleteCoupon(event,'<%=data[i]._id%>')" class="edit-delete">DELETE</button>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
    
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    async function deleteCoupon(event,couponId) {
        event.preventDefault()
        try {
            const response=await axios.delete('coupon/delete/'+couponId);
            if (response.status==200) {
                document.querySelector('row'+couponId)
            }
        } catch (error) {
            console.log(error)
        }
    }
</script>
</html>